<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.menu.MenuFragment">

    <Button
        android:id="@+id/movie_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="245dp"
        android:layout_weight="1.0"
        android:padding="15dp"
        android:text="Movies"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artists_button" />

    <Button
        android:id="@+id/tv_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="54dp"
        android:layout_weight="1.0"
        android:padding="15dp"
        android:text="Tv Shows"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/artists_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/artists_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="97dp"
        android:layout_weight="1.0"
        android:padding="15dp"
        android:text="Artists"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/movie_button"
        app:layout_constraintStart_toStartOf="@+id/tv_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>